<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardview_aya"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="16dp"
    android:padding="16dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/num_aya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nomor_ayat"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/ic_bg_row"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/ar_aya"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/ar"
            android:textSize="29sp"
            android:layout_marginStart="16dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/alfont_com_pdms_saleem_quranfont"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/num_aya"
            />


        <TextView
            android:id="@+id/en_aya"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Dengan menyebut nama Allah Yang Maha Pemurah lagi Maha Penyayang"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/alfont_com_pdms_saleem_quranfont"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ar_aya"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>